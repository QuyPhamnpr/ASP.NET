@model  WebBanSmartphones.Models.HomeModel
        
@{
    ViewBag.Title = "Home Page";
}

<style>
    .card-banner .img-bg {
        width: 135px;
        height: 111px;

    }
    .home-category-banner .img-bg {
        height : 230px;
    }
</style>
<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <nav class="nav-home-aside">
                            <h6 class="title-category">Danh Mục<i class="d-md-none icon fa fa-chevron-down"></i></h6>
                            <ul class="menu-category">
                                @foreach (var item in Model.ListCategory)
                                {
                                <li>
                                    @Html.ActionLink(item.Name, "ProductCategory","Category", new { @Id = item.Id }, null)
                                </li>

                                }

                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/banners/slideq1.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slideq2.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slideq3.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Phổ Biến</h6>
                            @foreach (var item in Model.ListCategory.Where(n=>n.ShowOnHomePage==true).Take(3))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@item.Name</h6>
                                        <a href="@Url.Action("ProductCategory","Category", new { Id = item.Id })" class="btn btn-secondary btn-sm"> Xem Ngay </a>
                                    </div>
                                    <a href="@Url.Action("ProductCategory","Category", new { Id = item.Id })"><img src="~/Content/images/items/@item.Avatar" height="80" class="img-bg"></a>
                                </div>
                            }

                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Giảm Giá Sốc</h3>
                    <p>Thời Gian Còn Lại</p>
                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">03</span> <small>Ngày</small></div>
                    <div> <span class="num">12</span> <small>Giờ</small></div>
                    <div> <span class="num">17</span> <small>Phút</small></div>
                    <div> <span class="num">02</span> <small>Giây</small></div>
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Where(n=>n.TypleId == 1).Take(4))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("Detail", "Product", new {Id = item.Id })" class="img-wrap">
                                <img src="~/Content/images/items/@item.Avatar">
                            </a>
                            <div class="text-wrap p-3">
                                <a href="#" class="title">@item.Name</a>
                                <span class="badge badge-danger"> -20% </span>
                            </div>
                        </figure>
                    </div> <!-- col.// -->
                }


            </div>
        </div>

    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">APPLE</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Apple Đang Thịnh Hành Hiện Nay</h5>
                        <p>
                            Màn hình:Công nghệ màn hình: OLED </br>
                            Độ phân giải: 1284 x 2778 Pixels</br>
                            Màn hình rộng: 6.7"</br>
                            Độ sáng: 1200 nits
                        </p>
                        <a href="#" class="btn btn-outline-primary rounded-pill">Xem Ngay</a>
                        <img src="~/Content/images/items/ip13.jpg" class="img-bg">
                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n=>n.BrandId == 1).Take(8))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail", "Product", new {Id = item.Id })" class="item">
                                    <div class="card-body">
                                        <h6 class="title">@item.Name</h6>
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.Avatar">
                                        <p class="text-muted"><i class="fa fa-map-marker-alt"></i> United Stateѕ, America </p>
                                    </div>
                                </a>
                            </li>
                        }

                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <!-- =============== SECTION 2 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">SAMSUNG</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Samsung Đang Thịnh Hành</h5>
                        <p>
                            Công nghệ màn hình:Dynamic AMOLED 2X </br>
                            Độ phân giải: 2K+ (1440 x 3088 Pixels) </br>
                            Màn hình rộng: 6.8"</br>
                            Độ sáng: 1750
                        </p>
                        <a href="#" class="btn btn-outline-primary rounded-pill">Xem Ngay</a>
                        <img src="~/Content/images/items/sss22.jpg" class="img-bg">
                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n=>n.BrandId == 2).Take(8))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail", "Product", new {Id = item.Id })" class="item">
                                    <div class="card-body">
                                        <h6 class="title">@item.Name</h6>
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.Avatar">
                                        <p class="text-muted"><i class="fa fa-map-marker-alt"></i> United Stateѕ, America </p>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 2 END =============== -->
    <!-- =============== SECTION REQUEST =============== -->

    <section class="padding-bottom">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Yêu Cầu Báo Giá</h4>
        </header>

        <div class="row">
            <div class="col-md-8">
                <div class="card-banner banner-quote overlay-gradient" style="background-image: url('~/Content/images/banners/banner9.jpg');">
                    <div class="card-img-overlay white">
                        <h3 class="card-title">Bảng yêu cầu báo giá</h3>
                        <p class="card-text" style="max-width: 400px">
                            Yêu cầu báo giá là lời đề xuất gửi bởi một công ty tới nhà cung cấp, yêu cầu nhà cung cấp gửi báo giá và đặt giá thầu cho cơ hội thực hiện một số nhiệm vụ hoặc dự án cụ thể. Yêu cầu báo giá thường là bước đầu tiên trong quá trình gửi đề nghị mời thầu.
                        </p>
                        <a href="" class="btn btn-primary rounded-pill">Nhiều Thêm</a>
                    </div>
                </div>
            </div> <!-- col // -->
            <div class="col-md-4">

                <div class="card card-body">
                    <h4 class="title py-3">Gửi Yêu Cầu</h4>
                    <form>
                        <div class="form-group">
                            <input class="form-control" name="" placeholder="Sản phẩm bạn muốn tìm" type="text">
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input class="form-control" placeholder="Số Lượng" name="" type="text">

                                <select class="custom-select form-control">
                                    <option>Giá</option>
                                    <option>Litres</option>
                                    <option>Tons</option>
                                    <option>Gramms</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group text-muted">
                            <p>Chọn Mẫu</p>
                            <label class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" value="option1">
                                <span class="form-check-label">Yêu Cầu Giá</span>
                            </label>
                            <label class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" value="option2">
                                <dspaniv class="form-check-label">Yêu Cầu Mẫu Hàng</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-warning">Yêu Cầu Báo Giá</button>
                        </div>
                    </form>
                </div>

            </div> <!-- col // -->
        </div> <!-- row // -->
    </section>

    <!-- =============== SECTION REQUEST .//END =============== -->
    <!-- =============== SECTION ITEMS =============== -->
